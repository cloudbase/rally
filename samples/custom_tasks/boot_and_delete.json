{% set flavor_name = flavor_name or "m1.tiny" %}
{% set image = image or "^cirros.*uec$" %}
{
    "NovaServers.boot_and_delete_server": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image}}"
                },
                "force_delete": false
            },
            "runner": {
                "type": "constant",
                "times": 200,
                "concurrency": 50
            },
            "context": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                }
            }
        }
    ]
}
