{% set flavor_name = flavor_name or "m1.tiny" %}
{% set image = image or "^cirros.*uec$" %}
{
    "VMTasks.boot_ssh_delete_server": [
        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "{{image}}"
                },
                "floating_network": "public",
                "force_delete": false,
                "username": "cirros"
            },
            "runner": {
                "type": "constant",
                "times": 200,
                "concurrency": 50
            },
            "context": {
                "users": {
                    "tenants": 3,
                    "users_per_tenant": 2
                },
                "network": {
                }
            }
        }
    ]
}
